<Window
    x:Class="YoutubeDownloaderWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:YoutubeDownloaderWpf.ViewModels"
    Title="Youtube Downloader Pro"
    Width="1400"
    Height="700"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  === PHẦN QUAN TRỌNG VỪA THÊM ĐỂ SỬA LỖI ===  -->
    <Window.Resources>
        <!--  Khai báo bộ chuyển đổi True/False thành Ẩn/Hiện  -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <!--  ===========================================  -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  1. HEADER & INPUT  -->
        <md:ColorZone
            Grid.Row="0"
            Padding="16"
            Effect="{DynamicResource MaterialDesignShadowDepth2}"
            Mode="PrimaryMid">
            <DockPanel>
                <TextBlock
                    Foreground="White"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="YT DOWNLOADER Pro.ST" />

                <Button
                    Margin="10,0"
                    md:ButtonAssist.CornerRadius="15"
                    Command="{Binding DownloadMissingToolsCommand}"
                    Content="TẢI TOOLS"
                    DockPanel.Dock="Right"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Visibility="{Binding AreToolsMissing, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button
                    Margin="10,0,0,0"
                    Command="{Binding AddDownloadCommand}"
                    DockPanel.Dock="Right"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                    <md:PackIcon
                        Width="24"
                        Height="24"
                        Kind="Plus" />
                </Button>

                <TextBox
                    VerticalAlignment="Center"
                    md:HintAssist.Hint="Dán link Youtube vào đây..."
                    CaretBrush="White"
                    FontSize="14"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding InputUrl, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </md:ColorZone>

        <!--  2. TOOLBAR CÀI ĐẶT  -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                <Button
                    Margin="0,0,10,0"
                    Command="{Binding ChangeOutputFolderCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Đổi thư mục lưu">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Margin="0,0,8,0" Kind="FolderOpen" />
                        <TextBlock
                            MaxWidth="200"
                            Text="{Binding OutputFolderPath}"
                            TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                </Button>

                <CheckBox
                    Margin="0,0,10,0"
                    Content="Chỉ tải MP3"
                    IsChecked="{Binding IsAudioOnly}"
                    ToolTip="Audio Only" />
                <!--  MỚI: Checkbox dịch thuật  -->
                <CheckBox
                    Margin="0,0,10,0"
                    Content="Dịch tên sang Anh"
                    IsChecked="{Binding IsAutoTranslate}"
                    ToolTip="Tự động dịch tiêu đề video sang tiếng Anh" />
                <CheckBox
                    Margin="0,0,10,0"
                    Content="Sub Việt"
                    IsChecked="{Binding IsSubVi}" />
                <CheckBox
                    Margin="0,0,10,0"
                    Content="Sub Anh"
                    IsChecked="{Binding IsSubEn}" />

                <!-- MENU COOKIES NÂNG CẤP -->
                <md:PopupBox StaysOpen="True" ToolTip="Cài đặt Cookies" Margin="0,0,10,0">
                    <md:PopupBox.ToggleContent>
                        <StackPanel Orientation="Horizontal">
                            <!-- Đổi màu icon: Màu Tím nếu có Cookie, Màu Xám nếu không -->
                            <md:PackIcon Kind="Cookie" 
                                         Foreground="{Binding CookieFilePath, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <!-- Chú thích nhanh: Nếu có path thì hiện "Đã bật", ko thì "Tắt" -->
                            <TextBlock Text="Cookies" Margin="5,0"/>
                        </StackPanel>
                    </md:PopupBox.ToggleContent>

                    <StackPanel Width="250" Margin="10">
                        <TextBlock Text="QUẢN LÝ COOKIES" FontWeight="Bold" Margin="0,0,0,5" HorizontalAlignment="Center"/>

                        <!-- Hiển thị đường dẫn file đang dùng -->
                        <TextBox Text="{Binding CookieFilePath}" 
                                 md:HintAssist.Hint="Chưa có file Cookies nào"
                                 IsReadOnly="True" FontSize="10" Margin="0,0,0,10"/>

                        <!-- Lựa chọn 1: Đăng nhập mới -->
                        <Button Command="{Binding OpenLoginCommand}" 
                                Content="1. Đăng nhập &amp; Lấy mới" 
                                Margin="0,0,0,5" ToolTip="Mở trình duyệt để lấy cookie mới"/>

                        <!-- Lựa chọn 2: Chọn file có sẵn -->
                        <Button Command="{Binding SelectCookieFileCommand}" 
                                Content="2. Chọn file có sẵn (.txt)" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,0,5" ToolTip="Chọn file cookies.txt bạn đã lưu"/>

                        <!-- Lựa chọn 3: Xóa -->
                        <Button Command="{Binding ClearCookiesCommand}" 
                                Content="3. Xóa / Hủy dùng" 
                                Background="Red" BorderBrush="Red"
                                Margin="0,5,0,0"/>
                    </StackPanel>
                </md:PopupBox>

                <Button
                    Command="{Binding OpenPlaylistCommand}"
                    Content="Quét Playlist"
                    Style="{StaticResource MaterialDesignFlatButton}" />
                <!--  Nút Cập nhật Mới  -->
                <Button
                    Margin="10,0,0,0"
                    Command="{Binding UpdateToolsCommand}"
                    Content="Cập nhật yt-dlp"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Bấm vào đây nếu gặp lỗi 'n challenge' hoặc tải thất bại" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button
                    Command="{Binding OpenOutputFolderCommand}"
                    Content="Mở thư mục"
                    Style="{StaticResource MaterialDesignFlatButton}" />
                <Button
                    Command="{Binding CancelAllCommand}"
                    Content="Hủy tất cả"
                    Foreground="Red"
                    Style="{StaticResource MaterialDesignFlatButton}" />
            </StackPanel>
        </Grid>

        <!--  3. DANH SÁCH TẢI  -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Border Padding="10">
                <ItemsControl ItemsSource="{Binding Downloads}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <md:Card Margin="0,0,0,10" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Background="#EEE"
                                        ClipToBounds="True"
                                        CornerRadius="4">
                                        <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill" />
                                    </Border>
                                    <Border
                                        Margin="4"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Background="Black"
                                        CornerRadius="2"
                                        Opacity="0.7">
                                        <TextBlock
                                            Padding="2"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Duration}" />
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="10,0">
                                        <TextBlock
                                            FontWeight="Bold"
                                            Text="{Binding Title}"
                                            TextTrimming="CharacterEllipsis" />
                                        <TextBlock
                                            FontSize="10"
                                            Opacity="0.5"
                                            Text="{Binding Url}"
                                            TextTrimming="CharacterEllipsis" />

                                        <Grid Margin="0,8">
                                            <ProgressBar
                                                Height="10"
                                                Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                Maximum="100"
                                                Style="{StaticResource MaterialDesignLinearProgressBar}"
                                                Value="{Binding Progress}" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="10"
                                                Text="{Binding Status}" />
                                        </Grid>

                                        <TextBlock
                                            FontSize="11"
                                            Foreground="Green"
                                            Text="{Binding Speed}" />
                                    </StackPanel>

                                    <Button
                                        Grid.Column="2"
                                        Command="{Binding DataContext.CancelItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                                        Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <md:PackIcon
                                            Width="30"
                                            Height="30"
                                            Foreground="Red"
                                            Kind="StopCircleOutline" />
                                    </Button>
                                </Grid>
                            </md:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </ScrollViewer>

        <!--  4. FOOTER STATUS  -->
        <StatusBar
            Grid.Row="3"
            Padding="10"
            Background="Transparent">
            <!--
                TextBox LOG:
                - IsReadOnly="True": Chỉ đọc, không cho sửa
                - Background="Transparent": Nền trong suốt để hợp với Dark Mode
                - BorderThickness="0": Bỏ viền khung
                - md:TextFieldAssist.DecorationVisibility="Hidden": Bỏ gạch chân của Material Design
                - TextWrapping="Wrap": Tự xuống dòng nếu lỗi quá dài
            -->
            <TextBox
                MaxHeight="60"
                VerticalAlignment="Center"
                md:TextFieldAssist.DecorationVisibility="Hidden"
                Background="Transparent"
                BorderThickness="0"
                FontWeight="Bold"
                Foreground="{DynamicResource MaterialDesignBody}"
                IsReadOnly="True"
                Text="{Binding LogMessage}"
                TextWrapping="Wrap" />
            <!--  Giới hạn chiều cao để không vỡ giao diện  -->

            <Separator />
            <TextBlock Text="{Binding TotalStatusInfo}" Foreground="WhiteSmoke"/>
            <Separator />
            <ProgressBar
                Width="100"
                Height="10"
                Value="{Binding TotalProgressValue}" />

            <StackPanel Orientation="Horizontal" Visibility="{Binding IsBusyWithTools, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Foreground="WhiteSmoke" Margin="10,0" Text="Đang tải tool:" />
                <ProgressBar
                    Width="100"
                    Height="10"
                    Value="{Binding ToolDownloadProgress}" />
            </StackPanel>
        </StatusBar>
    </Grid>
</Window>