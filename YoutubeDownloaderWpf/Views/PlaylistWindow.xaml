<Window x:Class="YoutubeDownloaderWpf.Views.PlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Chọn Video trong Playlist" Height="500" Width="800" WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel LastChildFill="True">
            <Button Content="Quét" Click="GetList_Click" DockPanel.Dock="Right" Margin="10,0,0,0"/>
            <TextBox Name="txtPlaylistUrl" md:HintAssist.Hint="Dán link Playlist vào đây..." VerticalAlignment="Center"/>
        </DockPanel>

        <DataGrid Name="dgList" Grid.Row="1" Margin="0,10" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Chọn" Binding="{Binding IsSelected}"/>
                <DataGridTextColumn Header="URL Video" Binding="{Binding Url}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Name="lblStatus" VerticalAlignment="Center" Margin="0,0,10,0" FontStyle="Italic"/>
            <Button Content="Thêm vào hàng đợi" Click="Confirm_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>