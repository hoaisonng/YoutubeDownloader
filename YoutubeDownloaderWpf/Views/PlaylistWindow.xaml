<Window x:Class="YoutubeDownloaderWpf.Views.PlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tải Playlist" Height="500" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="txtPlaylistUrl" Padding="5" ToolTip="Dán link playlist vào đây"/>
            <Button Content="Lấy Danh Sách" Click="GetList_Click" Grid.Column="1" Padding="10,5" Margin="5,0,0,0"/>
        </Grid>

        <DataGrid Name="dgList" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Chọn" Binding="{Binding IsSelected}" Width="50"/>
                <DataGridTextColumn Header="URL Video" Binding="{Binding Url}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Name="lblStatus" VerticalAlignment="Center" Margin="0,0,10,0" FontStyle="Italic"/>
            <Button Content="Thêm vào Hàng Đợi Tải" Click="Confirm_Click" Padding="15,5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>