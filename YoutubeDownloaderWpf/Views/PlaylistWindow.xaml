<Window
    x:Class="YoutubeDownloaderWpf.Views.PlaylistWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Tải Playlist"
    Width="700"
    Height="500"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Name="txtPlaylistUrl"
                Padding="5"
                ToolTip="Dán link playlist vào đây" />
            <Button
                Grid.Column="1"
                Margin="5,0,0,0"
                Padding="10,5"
                Click="GetList_Click"
                Content="Lấy Danh Sách" />
        </Grid>

        <DataGrid
            Name="dgList"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn
                    Width="50"
                    Binding="{Binding IsSelected}"
                    Header="Chọn" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Url}"
                    Header="URL Video" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <TextBlock
                Name="lblStatus"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                FontStyle="Italic" />
            <Button
                Padding="15,5"
                Click="Confirm_Click"
                Content="Thêm vào Hàng Đợi Tải"
                FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>